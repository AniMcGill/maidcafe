<div class="container-fluid">
  <!--<div class="row">
    <p>
      <a href="/order/create" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span></a>
    </p>
  </div>-->
  <div class="row">
    <form method="get" action="/order/create" class="form-inline">
      <div class="col-xs-2">
        <label for="tableInput">Table</label>
        <select id="tableInput" name="table" class="form-control"required>
          <% for(var i = 1; i <= 30; i++){ %>
          <option value="<%= i %>"><%= i %></option>
          <%}%>
        </select>
      </div>

      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span></button>
    </form>
  </div>

  <div class="row">
    <table class="table table-hover table-condensed">
      <col width="10%">
      <col width="25%">
      <col width="20%">
      <col width="10%">
      <col width="10%">
      <tr>
        <th>Table</th>
        <th>Name</th>
        <th>Menu Item</th>
        <th>Status</th>
        <th>Operations</th>
      </tr>
      <% orders.forEach(function(order) { %>
      <tr>
        <td><%= order.customer.table %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.menuItem.name %></td>
        <td>
          <%= order.state %>
          <%if (order.state === 'ready'){ %>
          <span class="glyphicon glyphicon-bell" style="color:red"></span>
          <%}%>
        </td>
        <td>
          <a href="/order/serve/<%= order.id%>"><span class="glyphicon glyphicon-glass"></span></a>
          <!--<a href="/order/modify/<%= order.id %>"><span class="glyphicon glyphicon-pencil"></span></a>
          <a href="/order/destroy/<%= order.id%>"><span class="glyphicon glyphicon-trash"></span></a>-->
        </td>
      </tr>
      <% }) %>
    </table>
  </div>

</div>
