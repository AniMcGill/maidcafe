<div class="container-fluid">
  <div class="row">
    <p>
      <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#customerAdd">
        <span class="glyphicon glyphicon-plus"></span>
      </button>
    </p>

    <div class="collapse" id="customerAdd">
      <div class="well">
        <form method="post" action="/customer/create" class="form-inline">
          <label for="customerName">Name</label>
          <input type="text" class="form-control" id="customerName" name="name" required>

          <label for="customerTable">Table</label>
          <select id="customerTable" name="table" class="form-control" required>
            <% for(var i = 1; i <= 30; i++){ %>
              <option value="<%= i %>"><%= i %></option>
            <%}%>
          </select>

          <button type="submit" class="btn btn-default">Add</button>
        </form>
      </div>
    </div>
  </div>

  <div class="row">
    <table class="table table-hover table-condensed">
      <col width="10%">
      <col width="10%">
      <col width="10%">
      <col width="25%">
      <tr>
        <th>Name</th>
        <th>Table</th>
        <th>Balance</th>
        <th>Operations</th>
      </tr>
      <% customers.forEach(function(customer) { %>
      <% var price = 0;
        customer.orders.forEach(function(order) {
          price += order.price;
        })
      %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.table %></td>
        <td>$<%= price %></td>
        <td>
          <span class="glyphicon glyphicon-yen"></span>
          <a href="/customer/modify/<%= customer.id %>"><span class="glyphicon glyphicon-pencil"></span></a>
          <a href="/customer/destroy/<%= customer.id%>"><span class="glyphicon glyphicon-trash"></span></a>
        </td>
      </tr>
      <% }) %>
    </table>
  </div>
</div>
