          <col width="10%">
          <col width="25%">
          <col width="10%">
          <tr>
            <th>Shortname</th>
            <th>Name</th>
            <th>Price</th>
          </tr>
          <% mains.forEach(function(main) { %>
          <tr>
            <td><%= main.shortname %></td>
            <td><%= main.name %></td>
            <td>$<%= main.price %></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><a data-toggle="collapse" href="#sidePanel">Sides</a></div>
      <div class="panel-body collapse in" id="sidePanel">
        <table class="table table-hover table-condensed">
          <col width="10%">
          <col width="25%">
          <col width="10%">
          <tr>
            <th>Shortname</th>
            <th>Name</th>
            <th>Price</th>
          </tr>
          <% sides.forEach(function(side) { %>
          <tr>
            <td><%= side.shortname %></td>
            <td><%= side.name %></td>
            <td>$<%= side.price %></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><a data-toggle="collapse" href="#desertPanel">Deserts</a></div>
      <div class="panel-body collapse in" id="desertPanel">
        <table class="table table-hover table-condensed">
          <col width="10%">
          <col width="25%">
          <col width="10%">
          <tr>
            <th>Shortname</th>
            <th>Name</th>
            <th>Price</th>
          </tr>
          <% deserts.forEach(function(desert) { %>
          <tr>
            <td><%= desert.shortname %></td>
            <td><%= desert.name %></td>
            <td>$<%= desert.price %></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><a data-toggle="collapse" href="#drinkPanel">Drinks</a></div>
      <div class="panel-body collapse in" id="drinkPanel">
        <table class="table table-hover table-condensed">
          <col width="10%">
          <col width="25%">
          <col width="10%">
          <tr>
            <th>Shortname</th>
            <th>Name</th>
            <th>Price</th>
          </tr>
          <% drinks.forEach(function(drink) { %>
